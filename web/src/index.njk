---
layout: layout.njk
title: Project Etho
pagination:
  data: videosByMonth
  size: 1
  alias: monthPage
permalink: "{% if pagination.pageNumber == 0 %}index.html{% else %}{{ monthPage.key }}/index.html{% endif %}"
---

{% set latestPage = videosByMonth[0] %}
{% set oldestPage = videosByMonth[videosByMonth.length - 1] %}
{% set latestHref = "/" %}
{% set oldestHref = "/" %}
{% if videosByMonth.length > 1 %}
  {% set oldestHref = "/" ~ oldestPage.key ~ "/" %}
{% endif %}

<div class="theme-switcher">
  <label class="theme-switcher__label" for="theme-switcher-select">Theme</label>
  <select id="theme-switcher-select" class="theme-switcher__select js-theme-select">
    <option value="system">System</option>
    <option value="light">Light</option>
    <option value="dark">Dark</option>
  </select>
</div>

<h1>Project Etho</h1>

<h2>
  <span
    class="js-locale-month"
    data-year="{{ monthPage.year }}"
    data-month="{{ monthPage.month }}"
  >{{ monthPage.key }}</span>
</h2>

{% include "month-controls.njk" %}

{% set navAriaLabel = "Month pagination" %}
{% set navClass = "" %}
{% include "month-pagination.njk" %}

<section class="video-grid">
  {% for video in monthPage.videos %}
    {% include "video-card.njk" %}
  {% endfor %}
</section>

{% set navAriaLabel = "Month pagination bottom" %}
{% set navClass = "month-pagination--bottom" %}
{% include "month-pagination.njk" %}
